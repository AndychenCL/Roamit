<Page
    x:Class="QuickShare.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickShare"
    xmlns:common="using:QuickShare.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    MinWidth="150">

    <Page.Resources>
        <ResourceDictionary>
            <Storyboard x:Name="bottomBarShowStoryboard">
                <DoubleAnimation Storyboard.TargetName="BottomBar" 
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 Duration="0:0:0.3" From="170" To="0">
                    <DoubleAnimation.EasingFunction>
                        <BackEase EasingMode="EaseOut" Amplitude="0" /> <!-- Because ExponentialEase animation is Mobile is buggy -->
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Name="bottomBarHideStoryboard">
                <DoubleAnimation Storyboard.TargetName="BottomBar" 
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 Duration="0:0:0.4" From="0" To="250">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Background="{ThemeResource AppBarBackground}" x:Name="MainGrid">
        <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated" />

        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" x:Name="BottomBar">
            <StackPanel.RenderTransform>
                <TranslateTransform />
            </StackPanel.RenderTransform>
            <Polygon Points="0,15 30,0, 30,15" Stroke="{ThemeResource ListViewItemBackgroundSelectedPressed}" Fill="{ThemeResource ListViewItemBackgroundSelectedPressed}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Stretch="Fill" />
            <Grid x:Name="activeDeviceContainer" Background="{ThemeResource ListViewItemBackgroundSelectedPressed}" Height="50" VerticalAlignment="Bottom" Margin="0,0,0,0">
                <ContentControl x:Name="activeDevice" Padding="8" Content="{x:Bind ViewModel.SelectedRemoteSystem, Mode=OneWay}" FontSize="22">
                    <ContentControl.ContentTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </ContentControl.ContentTransitions>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" >
                                <Grid>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="26" Text="{Binding Kind, Converter={StaticResource RemoteSystemKindToIconConverter}}"></TextBlock>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Margin="16,16,8,0" VerticalAlignment="Center" FontSize="18" Text="{Binding IsAvailableByProximity, Converter={StaticResource RemoteSystemProximityToIconConverter}}" Opacity="0.8" Foreground="SkyBlue"></TextBlock>
                                </Grid>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
                <!--<Polygon Points="0,20 30,0, 30,20" Stroke="LightGray" Fill="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Right" />-->
            </Grid>
            <ListView x:Name="devicesList" ItemsSource="{x:Bind ViewModel.DevicesList, Mode=OneWay}" Margin="0,0,0,0" SelectionChanged="devicesList_SelectionChanged" Background="{ThemeResource ListViewItemBackgroundSelectedPointerOver}" Height="108" VerticalAlignment="Bottom" Opacity="0.9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="3">
                                <StackPanel Orientation="Horizontal" >
                                    <Grid>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="26" Text="{Binding Kind, Converter={StaticResource RemoteSystemKindToIconConverter}}"></TextBlock>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Margin="16,16,8,0" VerticalAlignment="Center" FontSize="18" Text="{Binding IsAvailableByProximity, Converter={StaticResource RemoteSystemProximityToIconConverter}}" Opacity="0.8" Foreground="SkyBlue"></TextBlock>
                                    </Grid>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"></TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel>
                            <VirtualizingStackPanel.ChildrenTransitions>
                                <TransitionCollection/>
                            </VirtualizingStackPanel.ChildrenTransitions>
                        </VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
