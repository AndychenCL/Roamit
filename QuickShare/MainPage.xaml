<Page
    x:Class="QuickShare.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickShare"
    xmlns:common="using:QuickShare.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged"
    MinWidth="150">

    <Page.Resources>
        <ResourceDictionary>
            <Storyboard x:Name="bottomBarShowStoryboard">
                <DoubleAnimation Storyboard.TargetName="BottomBar" 
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 Duration="0:0:0.3" From="170" To="0">
                    <DoubleAnimation.EasingFunction>
                        <BackEase EasingMode="EaseOut" Amplitude="0" /> <!-- Because ExponentialEase animation is Mobile is buggy -->
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Name="bottomBarHideStoryboard">
                <DoubleAnimation Storyboard.TargetName="BottomBar" 
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                 Duration="0:0:0.4" From="0" To="250">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Background="{ThemeResource AppBarBackground}" x:Name="MainGrid" common:SizeChange.IsEnabled="True">
        <Grid x:Name="BlurGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Frame x:Name="ContentFrame" IsEnabled="{x:Bind ViewModel.IsContentFrameEnabled, Mode=OneWay}" Navigated="ContentFrame_Navigated" Background="#B1000000" Padding="{x:Bind ViewModel.FramePadding, Mode=OneWay}" />
        <StackPanel x:Name="TitleBarStackPanel" Height="36" VerticalAlignment="Top" Padding="12,8,0,0" Orientation="Horizontal" Visibility="{x:Bind ViewModel.CustomTopBarVisibility, Mode=OneWay}">
            <Grid Width="40" HorizontalAlignment="Stretch" Visibility="{x:Bind ViewModel.BackButtonPlaceholderVisibility, Mode=OneWay}"  />
            <TextBlock Text="{x:Bind ViewModel.Caption, Mode=OneWay}"  FontSize="12" Foreground="LightGray" x:Name="TitleBarCaption" />
            <TextBlock Text="QuickShare" FontSize="12" Foreground="LightGray" />
        </StackPanel>

        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" x:Name="BottomBar">
            <StackPanel.RenderTransform>
                <TranslateTransform />
            </StackPanel.RenderTransform>
            <Polygon Points="0,15 30,0, 30,15" StrokeThickness="0" Fill="{Binding Source={ThemeResource ListViewItemBackgroundSelectedPressed}, Converter={StaticResource BrushAlphaModifier}, ConverterParameter=0.6}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Stretch="Fill" />
            <Grid x:Name="activeDeviceContainer" Background="{Binding Source={ThemeResource ListViewItemBackgroundSelectedPressed}, Converter={StaticResource BrushAlphaModifier}, ConverterParameter=0.6}" Height="50" VerticalAlignment="Bottom" Margin="0,0,0,0">
                <ContentControl x:Name="activeDevice" Padding="8" Content="{x:Bind ViewModel.SelectedRemoteSystem, Mode=OneWay}" FontSize="22">
                    <ContentControl.ContentTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </ContentControl.ContentTransitions>
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" >
                                <Grid>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="26" Text="{Binding Kind, Converter={StaticResource RemoteSystemKindToIconConverter}}"></TextBlock>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Margin="16,16,8,0" VerticalAlignment="Center" FontSize="18" Text="{Binding IsAvailableByProximity, Converter={StaticResource RemoteSystemProximityToIconConverter}}" Opacity="0.8" Foreground="SkyBlue"></TextBlock>
                                </Grid>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
                <!--<Polygon Points="0,20 30,0, 30,20" Stroke="LightGray" Fill="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Right" />-->
            </Grid>
            <ListView x:Name="devicesList" 
                      ItemsSource="{x:Bind ViewModel.DevicesList, Mode=OneWay}" 
                      Margin="0,0,0,0" 
                      SelectionChanged="devicesList_SelectionChanged" 
                      Background="{Binding Source={ThemeResource ListViewItemBackgroundSelectedPressed}, Converter={StaticResource BrushAlphaModifier}, ConverterParameter=0.6}" 
                      Height="{Binding (common:SizeChange.ActualHeight), ElementName=MainGrid, Converter={StaticResource MathConverter}, ConverterParameter=(108v(x-440))^70}" 
                      VerticalAlignment="Bottom" 
                      Opacity="0.9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="3">
                                <StackPanel Orientation="Horizontal" >
                                    <Grid>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="26" Text="{Binding Kind, Converter={StaticResource RemoteSystemKindToIconConverter}}"></TextBlock>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Margin="16,16,8,0" VerticalAlignment="Center" FontSize="18" Text="{Binding IsAvailableByProximity, Converter={StaticResource RemoteSystemProximityToIconConverter}}" Opacity="0.8" Foreground="SkyBlue"></TextBlock>
                                    </Grid>
                                    <TextBlock Text="{Binding Id}" VerticalAlignment="Center"></TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel>
                            <VirtualizingStackPanel.ChildrenTransitions>
                                <TransitionCollection/>
                            </VirtualizingStackPanel.ChildrenTransitions>
                        </VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </StackPanel>

        <Grid x:Name="Overlay" 
              Background="{Binding Source={ThemeResource ApplicationPageBackgroundThemeBrush}, Converter={StaticResource BrushAlphaModifier}, ConverterParameter=0.5}">
            <Grid x:Name="SignInNotice" 
                  Background="{Binding Source={ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}, Converter={StaticResource BrushAlphaModifier}, ConverterParameter=0.7}"
                  MaxWidth="500" 
                  Padding="16,24,16,24"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Center">
                <StackPanel>
                    <Grid Height="100">
                        <!-- Will put Android+Windows logos here -->
                    </Grid>
                    <TextBlock TextWrapping="Wrap" 
                               Text="We've noticed that you have one or more Android devices connected to your Microsoft account." />
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,8,0,0"
                               Text="Would you like QuickShare to be able to send and receive content between your Windows and Android devices?" />

                    <TextBlock TextWrapping="Wrap"
                               Margin="0,32,0,0"
                               Opacity="0.7"
                               Text="QuickShare will use your Microsoft ID to connect your Android and Windows devices through its servers." />
                    <TextBlock TextWrapping="Wrap"
                               Margin="0,8,0,0"
                               Opacity="0.7"
                               Text="See our privacy policy in the Settings page for more information." />

                    <Grid Margin="0,40,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="Yes" Tapped="Authenticate_Tapped" Margin="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{ThemeResource ListViewItemBackgroundSelectedPressed}" />
                        <Button Content="No" Margin="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    </Grid>
                    <!--<Button Content="No, and don't ask again" Margin="2,8,2,2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />-->
                    <TextBlock Text="You can enable this later in settings" Opacity="0.4" TextAlignment="Center" Margin="0,4,0,0" />

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
